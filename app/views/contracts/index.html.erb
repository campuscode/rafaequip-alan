<section>
  <h1>Lista de Contratos</h1>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Número Contrato</th>
        <th>Cliente</th>
        <th>Endereço Entrega</th>
        <th>Contato Entrega</th>
        <th>Data início</th>
        <th>Período</th>
        <th>Valor total</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.contract_number %></td>
        <td><%= contract.customer.name %></td>
        <td><%= contract.shipping_address %></td>
        <td><%= contract.shipping_contact %></td>
        <td><%= l(contract.date_begin) %></td>
        <td><%= contract.rental_period.description %></td>        
        <td><%= number_to_currency(contract.total_value) %></td>
        <td><%= contract.status %></td>
        <td><%= link_to 'Detalhes', contract, class: "btn btn-default btn-sm" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>
<div><%= link_to 'Voltar', root_path , class: "btn btn-default" %></div>
