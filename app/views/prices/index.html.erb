<section>
  <h1>Tabela de Preços</h1>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Equipamento</th>
        <th>Prazo</th>
        <th>Preço</th>
        <th>Data de Criação</th>
      </tr>
    </thead>
    <tbody>
        <% @prices.each do |price| %>
        <tr>
          <td><%= price.equipment.description %></td>
          <td><%= price.rental_period.description %></td>
          <td><%= number_to_currency(price.amount) %></td>
          <td><%= l(price.created_at, format: :only_date) %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
  <div><%= link_to 'Voltar', root_path , class: "btn btn-default" %></div>
</section>
