<%= simple_form_for @equipment do |f| %>
  <%= f.input :equipment_code, label: 'Código do cliente' %>
  <%= f.input :description, as: :text, label: 'Descrição' %>
  <%= f.input :supplier, label: 'Fornecedor' %>
  <%= f.input :category, label: 'Categoria' %>
  <%= f.input :price, label: 'Preço' %>
  <%= f.input :serial_number, label: 'Número de série' %>
  <%= f.input :status, label: 'Status' %>
  <%= link_to 'Voltar', root_path , class: "btn btn-default" %>
  <%= f.button :submit, submit_text %>
<% end %>''
